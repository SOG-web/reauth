{
  "name": "@re-auth/logger",
  "version": "0.1.0",
  "description": "Tag-based logging package with beautiful terminal output and structured JSON logging",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && tsup",
    "build:esm": "tsup --format esm --outdir dist/esm",
    "build:cjs": "tsup --format cjs --outdir dist/cjs",
    "dev": "pnpm build:esm --watch",
    "lint": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "example": "tsx src/example.ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SOG-web/reauth.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.21",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2"
  }
}
